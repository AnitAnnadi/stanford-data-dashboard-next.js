generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Roles  {
  teacher
  site
  district
  county
  state
  country
  stanford
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  password String
  role Roles
  isTeacher Boolean
  code String @unique
  userLocations UserLocation[]
}

model UserLocation {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete:Cascade)
  userId String @db.ObjectId
  country String
  state String?
  county String?
  city String?
  district String?
  school String?
  multiplePeriods Boolean @default(false)
  approved Boolean @default(true)
}

model Location {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  country String
  state String?
  county String?
  city String
  district String?
  school String
}

enum SurveyTypes {
  pre
  post
}

type Option {
  text String
  code Int
}

type Question {
  question String
  options Option[]
}

model Form {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  active Boolean @default(true)
  type SurveyTypes
  askForStudentName Boolean @default(false)
  questions Question[]
  createdAt DateTime @default(now())
}