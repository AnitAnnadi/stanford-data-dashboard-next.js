generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Roles  {
  teacher
  site
  district
  county
  state
  country
  stanford
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  password String
  role Roles
  isTeacher Boolean
  code String @unique
  userLocations UserLocation[]
  responsesWithTeacher ResponseWithTeacher[]
  tokens               PasswordResetToken[]
}

model UserLocation {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete:Cascade)
  userId String @db.ObjectId
  country String
  state String?
  county String?
  city String?
  district String?
  school String?
  multiplePeriods Boolean @default(false)
  approved Boolean @default(true)
  responsesWithTeacher ResponseWithTeacher[]
}

model Location {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  country String
  state String?
  county String?
  city String
  district String?
  school String
  responsesWithoutTeacher ResponseWithoutTeacher[]
}

enum SurveyTypes {
  pre
  post
}

type Option {
  text String
  code Int
}

type Question {
  id String
  question String
  showInTeacherExport Boolean
  options Option[]
  name String?
}

model Form {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  active Boolean @default(true)
  type SurveyTypes
  provideCertificate Boolean @default(false)
  questions Question[]
  createdAt DateTime @default(now())
  responsesWithTeacher ResponseWithTeacher[]
  responsesWithoutTeacher ResponseWithoutTeacher[]
}

type Answer {
  questionId String
  optionCode Int
}

model ResponseWithTeacher {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  form Form @relation(fields: [formId], references: [id])
  formId String @db.ObjectId
  teacher User @relation(fields: [teacherId], references: [id])
  teacherId String @db.ObjectId
  teacherLocation UserLocation @relation(fields: [teacherLocationId], references: [id])
  teacherLocationId String @db.ObjectId
  grade String
  period Int?
  answers Answer[]
  createdAt DateTime @default(now())
}

model ResponseWithoutTeacher {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  form Form @relation(fields: [formId], references: [id])
  formId String @db.ObjectId
  location Location @relation(fields: [locationId], references: [id])
  locationId String @db.ObjectId
  grade String
  answers Answer[]
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
